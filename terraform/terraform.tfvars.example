# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "forum-microservices"

# IMPORTANT: Set to false if experiencing DynamoDB Global Tables timeout issues
# Global Tables replicas can take 20-30+ minutes and may timeout
# Set to true only if you need multi-region disaster recovery
enable_global_tables = false

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# ECS Configuration
container_cpu = 256      # 0.25 vCPU
container_memory = 512   # 512 MB
desired_count = 2        # Number of tasks per service

# Auto-scaling Configuration
min_capacity = 2
max_capacity = 10
cpu_target_threshold = 70     # Scale up when CPU > 70%
memory_target_threshold = 80  # Scale up when memory > 80%

# ALB Configuration
health_check_path = "/health"
enable_deletion_protection = false  # Set to true for production

# Optional: SSL Certificate ARN for HTTPS
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx"

# Optional: GitHub configuration for CodePipeline (if using GitHub instead of CodeCommit)
# github_repo = "your-username/your-repo"
# github_branch = "main"
# github_token_secret_arn = "arn:aws:secretsmanager:us-east-1:123456789012:secret:github-token"
